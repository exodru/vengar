<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <StackPanel>
            <Border Padding="20" Background="{DynamicResource PrimaryBackground}">
                <Button Classes="MenuButtonDisabled" Content="Button Preview" />
            </Border>
            <Border Padding="20" Background="{DynamicResource PrimaryBackground}">
                <Button Classes="MenuButton" Content="Button Preview" />
            </Border>
            <Border Padding="20" Background="{DynamicResource PrimaryBackground}">
                <Button Classes="ActionButton" Content="Action Btn Preview" />
            </Border>
            <TabStrip>
                <TabStripItem>Tab 1</TabStripItem>
                <TabStripItem>Tab 2</TabStripItem>
            </TabStrip>
            <Border Padding="15">
                <TextBox Watermark="Testing" />
            </Border>
        </StackPanel>
    </Design.PreviewWith>

    <!--  RESET STYLE DEFAULTS  -->
    <!-- <Style Selector=":is(TopLevel)"> -->
    <!--     <Setter Property="FontFamily" Value="avares://vengar/Assets/Fonts#Roboto, Arial, Sans-Serif" /> -->
    <!-- </Style> -->
    <Style Selector="Window">
        <Setter Property="FontFamily" Value="{StaticResource RobotoFont}" />
        <Setter Property="FontWeight" Value="Regular" />
    </Style>

    <Style Selector="TabStripItem">
        <Setter Property="FontSize" Value="15" />

    </Style>

    <Style Selector="TabStripItem:onpointerover">
        <Setter Property="Foreground" Value="{StaticResource Accent}" />
    </Style>

    <Style Selector="TabStripItem:selected">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Foreground" Value="{StaticResource Accent}" />
    </Style>

    <Style Selector="TabStripItem:selected /template/ Border#PART_SelectedPipe">
        <Setter Property="Background" Value="{StaticResource Accent}" />
        <Setter Property="Height" Value="3" />
    </Style>

    <Style Selector="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Padding" Value="0 5" />
    </Style>

    <Style Selector="Button:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <!--  PERSONALIZED  -->
    <Style Selector="Button.MenuButton">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}" />
    </Style>

    <Style Selector="Button.MenuButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ButtonGradient}" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextHoverContrast}" />
    </Style>

    <Style Selector="Button.MenuButtonDisabled /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#666666" />
        <Setter Property="Padding" Value="10" />
    </Style>

    <Style Selector="Button.MenuButtonDisabled:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryTopLayerBackground}" />
    </Style>

    <Style Selector="Button.MenuButton.active">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextHoverContrast}" />
    </Style>
    <Style Selector="Button.MenuButton.active /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ButtonGradient}" />
    </Style>

    <Style Selector="Button &gt; StackPanel &gt; PathIcon">
        <Setter Property="Width" Value="NaN" />
        <Setter Property="Height" Value="NaN" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}" />
    </Style>

    <Style Selector="Button.MenuButton:pointerover &gt; StackPanel &gt; PathIcon">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextHoverContrast}" />
    </Style>

    <Style Selector="Button.ActionButton">
        <Setter Property="Background" Value="{DynamicResource ButtonGradient}" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextHoverContrast}" />
        <Setter Property="Padding" Value="10" />
    </Style>

    <Style Selector="Button.ActionButton:pointerover /template/ ContentPresenter">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}" />
        <Setter Property="Background" Value="#12121250" />
        <Setter Property="BorderBrush" Value="White" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style Selector="TextBox:pointerover/template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{StaticResource Accent}" />
    </Style>

    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{StaticResource Accent}" />
    </Style>

    <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
        <Setter Property="Fill" Value="{StaticResource Accent}" />
    </Style>

    <Style Selector="DataGridRow:selected">
        <Setter Property="Foreground" Value="Black" />
    </Style>

</Styles>