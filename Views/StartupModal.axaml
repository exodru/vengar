<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="230"
        x:Class="vengar.Views.StartupModal"
        x:CompileBindings="True"
        ExtendClientAreaChromeHints="NoChrome"
        TransparencyLevelHint="Mica, Blur"
        Background="{DynamicResource PrimaryTopLayerBackground}"
        ExtendClientAreaToDecorationsHint="True"
        Icon="/Assets/vengar.ico"
        Title="Vengar | Disclaimer"
        Width="400" Height="230"
        CanResize="False"
        WindowStartupLocation="CenterScreen">
    
    <Window.Styles>
        <Style Selector="Button.MenuButton:pointerover">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Styles>
    
    <StackPanel Margin="25" Spacing="15" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Important Disclaimer" 
                   FontFamily="{StaticResource ScienceGothicFont}"
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="{DynamicResource Accent}" 
                   HorizontalAlignment="Center" />
        
        <TextBlock Text="Vengar is a tool for network analysis. Scan responsibly and keep in mind that remotely probing devices without explicit permission is illegal and unethical."
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   Foreground="White" />
                   
        <Button Content="I understand and accept" 
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Click="AcceptButton_Click"
                IsDefault="True"
                Foreground="{DynamicResource Accent}"
                BorderBrush="{DynamicResource Accent}"
                BorderThickness="1"
                />
                
    </StackPanel>
</Window>