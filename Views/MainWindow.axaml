                        <StackPanel
                            Margin="5,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsVisible="{Binding SideMenuExpanded}">
                            <TextBlock
                                FontFamily="{StaticResource ScienceGothicFont}"
                                FontSize="16"
                                LetterSpacing="3"
                                Text="{Binding AppName}" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="12"
                                LetterSpacing="1"
                                Text="Network Utilities" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Border
                    Grid.Row="1"
                    Height="5"
                    Background="#10AAAAAA" />

                <Border Grid.Row="2" Padding="15,20">
                    <Grid RowDefinitions="*, Auto">
                        <StackPanel
                            Grid.Row="0"
                            VerticalAlignment="Stretch"
                            Spacing="12">

                            <Button
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Classes="MenuButton"
                                Command="{Binding GoPingPageCommand}">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal"
                                    Spacing="5">
                                    <PathIcon
                                        Width="16"
                                        Height="16"
                                        Data="{StaticResource LiveRegular}" />
                                    <TextBlock IsVisible="{Binding SideMenuExpanded}" Text="Ping" />
                                </StackPanel>
                            </Button>

                            <Button
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Classes="MenuButton"
                                Command="{Binding GoPortScannerPageCommand}">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal"
                                    Spacing="5">

                                    <PathIcon
                                        Width="16"
                                        Height="16"
                                        Data="{StaticResource SidebarSearchRtlRegular}" />
                                    <TextBlock IsVisible="{Binding SideMenuExpanded}" Text="Port Scanner" />
                                </StackPanel>
                            </Button>

                            <Button
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Classes="MenuButton"
                                Command="{Binding GoDnsLookupPageCommand}">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal"
                                    Spacing="5">
                                    <PathIcon
                                        Width="16"
                                        Height="16"
                                        Data="{StaticResource RouterRegular}" />
                                    <TextBlock IsVisible="{Binding SideMenuExpanded}" Text="DNS Lookup" />
                                </StackPanel>
                            </Button>

                            <Button
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Classes="MenuButtonDisabled">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal"
                                    Spacing="5">
                                    <PathIcon
                                        Width="16"
                                        Height="16"
                                        Data="{StaticResource DevtoolsRegular}"
                                        Foreground="#666666" />
                                    <TextBlock IsVisible="{Binding SideMenuExpanded}" Text="HTTP Tester" />
                                </StackPanel>
                            </Button>

                            <Button
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Classes="MenuButtonDisabled">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal"
                                    Spacing="5">
                                    <PathIcon
                                        Width="16"
                                        Height="16"
                                        Data="{StaticResource PersonQuestionMarkRegular}"
                                        Foreground="#666666" />
                                    <TextBlock IsVisible="{Binding SideMenuExpanded}" Text="WHOIS" />
                                </StackPanel>
                            </Button>

                            <Button
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Classes="MenuButton"
                                Command="{Binding GoIpToolsPageCommand}">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal"
                                    Spacing="5">
                                    <PathIcon
                                        Width="16"
                                        Height="16"
                                        Data="{StaticResource NetworkCheckRegular}" />
                                    <TextBlock IsVisible="{Binding SideMenuExpanded}" Text="IP Tools" />
                                </StackPanel>
                            </Button>

                            <Button
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Classes="MenuButtonDisabled">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal"
                                    Spacing="5">
                                    <PathIcon
                                        Width="16"
                                        Height="16"
                                        Data="{StaticResource GroupRegular}"
                                        Foreground="#666666" />
                                    <TextBlock IsVisible="{Binding SideMenuExpanded}" Text="Utilities" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <StackPanel Grid.Row="1">

                            <Button
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Classes="MenuButton"
                                Command="{Binding QuitCommand}">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal"
                                    Spacing="5">
                                    <PathIcon
                                        Width="16"
                                        Height="16"
                                        Data="{StaticResource PowerRegular}" />
                                    <TextBlock IsVisible="{Binding SideMenuExpanded}" Text="Quit" />
                                </StackPanel>
                            </Button>
                            <TextBlock
                                Padding="5"
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Foreground="#70FFFFFF"
                                IsVisible="{Binding SideMenuExpanded}"
                                LetterSpacing="1"
                                Text="version 0.1-alpha" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>

</Window>