<UserControl
    x:Class="vengar.Views.HomeView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:vengar.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:HomeViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:HomeViewModel />
    </Design.DataContext>

    <Grid Grid.Column="1" Background="{DynamicResource PrimaryTopLayerBackground}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                Margin="0,0,0,5"
                HorizontalAlignment="Center"
                FontFamily="{StaticResource ScienceGothicFont}"
                FontSize="32"
                LetterSpacing="2"
                Text="{Binding AppName}" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Thin"
                Text="{Binding AppDescription}" />

            <Image
                Height="92"
                Margin="0,15,10,15"
                Source="/Assets/vengar-logo.png" />
        </StackPanel>
    </Grid>
</UserControl>
